<phpunit bootstrap="./Bootstrap.php"  colors="true">
    <testsuite name="ZProwl">
      <directory suffix=".php">./ZProwl</directory>
    </testsuite>
  <filter>
    <whitelist>
      <directory suffix=".php">../src/ZProwl</directory>
    </whitelist>
  </filter>
  <logging>
    <log type="coverage-html"
         target="./coverage"
         charset="UTF-8"
         yui="true"
         highlight="true"
         lowUpperBound="50"
         highLowerBound="80"/>
  </logging>
</phpunit>
